<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.medicalsystem.mapper.MedicRecordInfoMapper">
    <resultMap id="BaseResultMap" type="com.test.medicalsystem.entity.MedicRecordInfo">
        <id column="bid" jdbcType="INTEGER" property="bid"/>
        <result column="stu_register" jdbcType="VARCHAR" property="stuRegister"/>
        <result column="stu_num" jdbcType="VARCHAR" property="stuNum"/>
        <result column="stu_name" jdbcType="VARCHAR" property="stuName"/>
        <result column="diagnostic_results" jdbcType="VARCHAR" property="diagnosticResults"/>
        <result column="diagnostic_time" jdbcType="VARCHAR" property="diagnosticTime"/>
        <result column="suggestion" jdbcType="VARCHAR" property="suggestion"/>
    </resultMap>

    <sql id="Base_Column_List">
        bid,stu_register,stu_num,stu_name,diagnostic_results,diagnostic_time,suggestion
    </sql>

<!--    病例信息表-->
    <select id="selectBystuRegister" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"></include>
        from medic_record_info
        where stu_register = #{stuRegister,jdbcType=VARCHAR}
    </select>

<!--    增加病例-->
    <insert id="insertMedicRecordInfo" parameterType="com.test.medicalsystem.entity.MedicRecordInfo">
        insert into medic_record_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bid !=null">
                bid,
            </if>
            <if test="stuRegister !=null">
                stu_register,
            </if>
            <if test="stuNum !=null">
                stu_num,
            </if>
            <if test="stuName !=null">
                stu_name,
            </if>
            <if test="diagnosticResults !=null">
                diagnostic_results,
            </if>
            <if test="diagnosticTime !=null">
                diagnostic_time,
            </if>
            <if test="suggestion !=null">
                suggestion,
            </if>
        </trim>

        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bid !=null">
                #{bid,jdbcType=INTEGER},
            </if>
            <if test="stuRegister !=null">
                #{stuRegister,jdbcType=VARCHAR},
            </if>
            <if test="stuNum !=null">
                #{stuNum,jdbcType=VARCHAR},
            </if>
            <if test="stuName !=null">
                #{stuName,jdbcType=VARCHAR},
            </if>
            <if test="diagnosticResults !=null">
                #{diagnosticResults,jdbcType=VARCHAR},
            </if>
            <if test="diagnosticTime !=null">
                #{diagnosticTime,jdbcType=VARCHAR},
            </if>
            <if test="suggestion !=null">
                #{suggestion,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

<!--    更新病例信息-->
    <update id="updateMedicRecordInfoBystuRegister" parameterType="com.test.medicalsystem.entity.MedicRecordInfo">
        update medic_record_info
        <set>
            <if test="stuNum !=null">
                stu_num = #{stuNum,jdbcType=VARCHAR},
            </if>
            <if test="stuName !=null">
                stu_name = #{stuName,jdbcType=VARCHAR},
            </if>
            <if test="diagnosticResults !=null">
                diagnostic_results = #{diagnosticResults,jdbcType=VARCHAR},
            </if>
            <if test="diagnosticTime !=null">
                diagnostic_time = #{diagnosticTime,jdbcType=VARCHAR},
            </if>
            <if test="suggestion !=null">
                suggestion = #{suggestion,jdbcType=VARCHAR},
            </if>
        </set>
        where
        stu_register = #{stuRegister,jdbcType=VARCHAR}
    </update>
    
<!--    删除by编号-->
    <delete id="deleteBystuRegister" parameterType="java.lang.String">
        delete from medic_record_info
        where
        stu_register = #{stuRegister,jdbcType=VARCHAR}
    </delete>



</mapper>
    